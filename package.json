{
    "name": "kodai-vision",
    "version": "1.0.0",
    "license": "MIT",
    "private": true,
    "scripts": {
        "codegen": "apollo client:codegen --target=typescript --globalTypesFile=graphql/globalTypes.d.ts",
        "dev": "next",
        "build": "next build && next export",
        "lint": "run-p lint:ts-js lint:css",
        "lint:ts-js": "eslint './**/*.{ts,tsx,js}'",
        "lint:css": "stylelint './**/*.css'",
        "format": "run-p format:ts-js format:css",
        "format:ts-js": "eslint --fix './**/*.{ts,tsx,js}'",
        "format:css": "stylelint --fix './**/*.css'"
    },
    "dependencies": {
        "@apollo/client": "^3.2.5",
        "classnames": "2.2.6",
        "graphql": "^15.3.0",
        "react": "16.14.0",
        "react-dom": "16.14.0",
        "react-markdown": "^5.0.0",
        "tailwindcss": "1.9.4"
    },
    "devDependencies": {
        "@types/classnames": "2.2.10",
        "@types/node": "13.13.10",
        "@types/react": "16.9.53",
        "@types/react-dom": "16.9.8",
        "@types/webmidi": "2.0.4",
        "@typescript-eslint/eslint-plugin": "4.4.1",
        "@typescript-eslint/parser": "4.4.1",
        "apollo": "^2.31.0",
        "autoprefixer": "10.0.1",
        "cssnano": "4.1.10",
        "dotenv": "^8.2.0",
        "eslint": "7.11.0",
        "eslint-config-prettier": "6.13.0",
        "eslint-plugin-prettier": "3.1.4",
        "eslint-plugin-react": "7.21.5",
        "eslint-plugin-simple-import-sort": "5.0.3",
        "next": "9.5.5",
        "npm-run-all": "4.1.5",
        "postcss": "8.1.1",
        "postcss-flexbugs-fixes": "4.2.1",
        "postcss-preset-env": "6.7.0",
        "prettier": "2.1.2",
        "stylelint": "13.7.2",
        "stylelint-config-standard": "20.0.0",
        "typescript": "4.0.3"
    },
    "engines": {
        "node": "12.x"
    },
    "browserslist": {
        "browsers": "defaults"
    }
}
