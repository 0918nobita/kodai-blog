{
  "name": "vision",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "local-build": "env-cmd run-p ssg rollup:build postcss:build",
    "local-serve": "env-cmd run-p ssg rollup:watch postcss:watch",
    "build": "run-p ssg rollup:build postcss:build",
    "serve": "run-p ssg rollup:watch postcss:watch",
    "ssg": "ts-node --script-mode ./ssg/generate.ts",
    "rollup:build": "rollup -c",
    "rollup:watch": "rollup -c -w",
    "postcss:build": "postcss ./styles/**/*.css --dir dist --verbose",
    "postcss:watch": "postcss ./styles/**/*.css --dir dist --verbose --watch",
    "lint:html": "prettier --check ./dist/*.html",
    "lint:js": "prettier --check ./**/*.js",
    "lint:ts": "eslint ./**/*.ts",
    "lint:css": "stylelint ./styles/**/*.css",
    "lint": "run-s lint:html lint:js lint:ts lint:css",
    "format:html": "prettier --write ./dist/*.html",
    "format:js": "prettier --write ./**/*.js",
    "format:ts": "eslint ./**/*.ts --fix",
    "format:css": "stylelint ./styles/**/*.css --fix",
    "format": "run-s format:html format:js format:ts format:css"
  },
  "dependencies": {},
  "devDependencies": {
    "@contentful/rich-text-html-renderer": "^13.4.0",
    "@rollup/plugin-commonjs": "11.1.0",
    "@rollup/plugin-node-resolve": "7.1.3",
    "@rollup/plugin-replace": "2.3.2",
    "@typescript-eslint/eslint-plugin": "2.29.0",
    "@typescript-eslint/parser": "2.29.0",
    "autoprefixer": "9.7.6",
    "contentful": "^7.14.3",
    "cssnano": "4.1.10",
    "env-cmd": "^10.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-simple-import-sort": "5.0.2",
    "handlebars": "^4.7.6",
    "npm-run-all": "4.1.5",
    "postcss-cli": "7.1.0",
    "prettier": "2.0.5",
    "rollup": "2.7.2",
    "rollup-plugin-jscc": "1.0.0",
    "rollup-plugin-serve": "1.0.1",
    "rollup-plugin-terser": "5.3.0",
    "rollup-plugin-typescript2": "0.27.0",
    "stylelint": "13.3.3",
    "stylelint-config-standard": "20.0.0",
    "ts-node": "^8.9.0",
    "typescript": "3.8.3"
  },
  "engines": {
    "node": "12.x"
  },
  "browserslist": {
    "browsers": "defaults"
  }
}
