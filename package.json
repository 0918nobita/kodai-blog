{
  "name": "kodai-vision",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "codegen": "apollo client:codegen --target=typescript --globalTypesFile=graphql/globalTypes.d.ts",
    "dev": "next",
    "build": "next build && next export",
    "lint": "run-p lint:ts-js lint:css",
    "lint:ts-js": "eslint './**/*.{ts,tsx,js}'",
    "lint:css": "stylelint './**/*.css'",
    "format": "run-p format:ts-js format:css",
    "format:ts-js": "eslint --fix './**/*.{ts,tsx,js}'",
    "format:css": "stylelint --fix './**/*.css'"
  },
  "dependencies": {
    "@apollo/client": "3.2.7",
    "classnames": "2.2.6",
    "graphql": "15.4.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-markdown": "5.0.2",
    "tailwindcss": "1.9.6"
  },
  "devDependencies": {
    "@types/classnames": "2.2.11",
    "@types/node": "13.13.10",
    "@types/react": "16.9.56",
    "@types/react-dom": "16.9.9",
    "@types/webmidi": "2.0.4",
    "@typescript-eslint/eslint-plugin": "4.7.0",
    "@typescript-eslint/parser": "4.7.0",
    "apollo": "2.31.1",
    "autoprefixer": "10.0.2",
    "cssnano": "4.1.10",
    "dotenv": "8.2.0",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-simple-import-sort": "5.0.3",
    "next": "10.0.2",
    "npm-run-all": "4.1.5",
    "postcss": "8.1.7",
    "postcss-flexbugs-fixes": "5.0.1",
    "postcss-preset-env": "6.7.0",
    "prettier": "2.1.2",
    "stylelint": "13.7.2",
    "stylelint-config-standard": "20.0.0",
    "typescript": "4.0.5"
  },
  "engines": {
    "node": "12.x"
  },
  "browserslist": {
    "browsers": "defaults"
  }
}
