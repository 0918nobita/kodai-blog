---
import { type CollectionEntry, getCollection } from 'astro:content';

import dayjs from 'dayjs';

import { Breadcrumb } from '~/components/Breadcrumb';
import Layout from '~/layouts/Layout.astro';

export async function getStaticPaths() {
  const historyDetails = await getCollection('historyDetail');

  return historyDetails.map((historyDetail) => ({
    params: { slug: historyDetail.slug },
    props: historyDetail,
  }));
}

type Props = CollectionEntry<'historyDetail'>;

const historyDetail = Astro.props;

const { Content } = await historyDetail.render();
---

<Layout
  title={`${historyDetail.data.title} | Kodai のウェブサイト`}
  description={historyDetail.data.description}
>
  <Breadcrumb
    path={[
      { label: '自分史', link: '/history' },
      {
        label: historyDetail.data.title,
        link: `/history/${historyDetail.slug}`,
      },
    ]}
  />
  <p>
    最終更新日：{dayjs(historyDetail.data.modifiedAt).format('YYYY年MM月DD日')}
  </p>
  <Content />
</Layout>
