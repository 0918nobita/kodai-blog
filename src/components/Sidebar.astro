<style>
  nav {
    background-color: var(--sidebar-bg);
    color: var(--sidebar-text);
    width: 18rem;
    min-height: 100vh;
  }

  .icon {
    max-width: 100%;
    height: auto;
    padding: 1rem;
  }

  ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  li {
    &:hover {
      background-color: var(--sidebar-hovered-bg);
    }

    a {
      text-decoration: none;

      div {
        padding: 0.5rem 1rem;
      }
    }
  }
