---
import styles from './Sidebar.module.css';

import { Image } from 'astro:assets';

const { class: className, themeToggleClass } = Astro.props;
---

<nav class:list={[styles['nav'], className]}>
  <Image
    class={styles['icon']}
    src="/icon.jpg"
    alt="kodai のアイコン"
    width="399"
    height="399"
    loading="eager"
    decoding="async"
  />

  <ul>
    <li><a href="/"><div>トップページ</div></a></li>
    <li><a href="/contact"><div>連絡先</div></a></li>
    <li><a href="/skills"><div>スキル・強み</div></a></li>
    <li><a href="/history"><div>自分史</div></a></li>
    <li><a href="/hobbies"><div>趣味</div></a></li>
  </ul>

  <div class={styles['spacer']}></div>

  <select class:list={[styles['themeToggle'], themeToggleClass]}>
    <option value="match-system">システム設定にあわせる</option>
    <option value="dark">ダークモードに固定</option>
    <option value="light">ライトモードに固定</option>
  </select>
</nav>
