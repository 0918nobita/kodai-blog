    class="icon"
    src="/icon.jpg"
    alt="kodai のアイコン"
    width="399"
    height="399"
    loading="eager"
    decoding="async"
  />
  <ul>
    <li><a href="/"><div>トップページ</div></a></li>
    <li><a href="/skills"><div>スキル・強み</div></a></li>
