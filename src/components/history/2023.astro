---
import Heading from '../Heading.astro';
import { Card } from '~/components/Card';
import HistoryA from './HistoryA.svelte';
import HistoryB from './HistoryB.svelte';
import HistoryC from './HistoryC.svelte';
import HistoryCards from './HistoryCards.svelte';
import HistorySection from './HistorySection.astro';
---

<HistorySection>
  <Heading id="2023" textLabel="2023年の項目">2023年</Heading>

  <HistoryCards client:load>
    <HistoryA client:load>
      <Card
        client:load
        title="gRPC・GraphQL の両方を用いたサンプルを作成した"
        desc="gRPC・GraphQL を介して、Rust バックエンド・BFF・フロントエンドを繋ぐサンプルを作成しました。"
        link="/history/2023-grpc-graphql"
      />
      <Card
        client:load
        title="Obsidian プラグインを自作して公開した"
        desc="中国語学習を支援する Obsidian プラグイン「Obsidian Zhongwen Block」を開発・公開しました。"
      />
    </HistoryA>
    <HistoryB client:load>
      <Card
        client:load
        title="YouTube ライブのチャットを VOICEVOX で読み上げるツールを Rust で自作・運用した"
        desc="準備中…"
      />
      <Card
        client:load
        title="NeoVim を Lua でカスタマイズすることにハマった"
        desc="準備中…"
      />
    </HistoryB>
    <HistoryC client:load>
      <Card
        client:load
        title="中国語を独学で学び始めた"
        desc="大陸版アークナイツがきっかけで中国語学習を開始しました。"
      />
    </HistoryC>
  </HistoryCards>
</HistorySection>
